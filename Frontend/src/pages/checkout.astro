---
import Layout from '../layouts/Layout.astro';
import { apiService } from '../lib/apiService';
import '../css/checkout.css';

// Ambil produk dari database
const response = await apiService.getProducts();
const products = response.data || [];

// Helper untuk mapping gambar (karena di DB belum ada kolom image)
const getProductImage = (name: string) => {
  const n = name.toLowerCase();
  if (n.includes('susu') && n.includes('1l')) return '/kopi susu 1l.png';
  if (n.includes('hitam') && n.includes('1l')) return '/kopi hitam 1l.png';
  if (n.includes('susu') && n.includes('500ml')) return '/kopi susu 500ml.png';
  if (n.includes('remon')) return '/teh remon.png';
  if ((n.includes('cokelat') || n.includes('chocolate')) && !n.includes('jeruk')) return '/chocolate.png';
  if (n.includes('kelapa') || n.includes('jeruk')) return '/kelapa jeruk.png';
  // Untuk produk baru/tidak dikenal, gunakan gambar putih polos
  return 'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mP8/x8AAwMCAO+ip1sAAAAASUVORK5CYII='; 
};
---

<Layout title="Checkout - TUKO">
  <section class="checkout-section">
    <div class="checkout-container">
      <div class="checkout-left">
        <div class="products-list" id="products-list">
          {products.length === 0 && <p id="loading-text">Memuat produk...</p>}
        </div>
      </div>

      <div class="checkout-right">
        <div class="cart-summary">
          <h2>Pesanan Anda</h2>
          
          <div class="cart-items" id="cart-items">
            </div>

          <div class="cart-footer">
            <div class="payment-details">
              <div class="payment-method">
                <label for="method">Metode Pembayaran</label>
                <select id="method">
                  <option value="tunai">Tunai</option>
                  <option value="transfer">Transfer</option>
                  <option value="qris">QRIS</option>
                </select>
              </div>
              <div class="order-date">
                <label for="order-date">Tanggal Pesanan</label>
                <input type="date" id="order-date" />
              </div>
            </div>
            <div class="total-row">
              <span id="total-price">Rp.0</span>
              <button class="btn-konfirmasi">Konfirmasi</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Receipt Modal -->
  <div id="receipt-modal" class="receipt-modal">
    <div class="receipt-content">
      <div class="receipt-header">
        <h2>TUKOPI</h2>
        <p>STRUK PESANAN</p>
      </div>
      <div class="receipt-info" id="receipt-info">
        <!-- Filled by JS -->
      </div>
      <div class="receipt-items" id="receipt-details">
        <!-- Filled by JS -->
      </div>
      <div class="receipt-total-row">
        <span>TOTAL</span>
        <span id="receipt-total">Rp.0</span>
      </div>
      <button class="btn-close-receipt" id="btn-close-receipt">KEMBALI KE BERANDA</button>
    </div>
  </div>
</Layout>

<script is:inline>
  // Helper gambar versi client-side
  const getProductImage = (name) => {
    const n = name.toLowerCase();
    if (n.includes('susu') && n.includes('1l')) return '/kopi susu 1l.png';
    if (n.includes('hitam') && n.includes('1l')) return '/kopi hitam 1l.png';
    if (n.includes('susu') && n.includes('500ml')) return '/kopi susu 500ml.png';
    if (n.includes('remon')) return '/teh remon.png';
    if ((n.includes('cokelat') || n.includes('chocolate')) && !n.includes('jeruk')) return '/chocolate.png';
    if (n.includes('kelapa') || n.includes('jeruk')) return '/kelapa jeruk.png';
    return 'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mP8/x8AAwMCAO+ip1sAAAAASUVORK5CYII='; 
  };

  let dbProducts = {};
  let cart = {};
  let cashiers = [];

  function renderProducts(products) {
    const list = document.getElementById('products-list');
    if (!list) return;
    
    list.innerHTML = products.map(p => `
      <div class="product-card">
        <div class="product-image">
          <img src="${getProductImage(p.PRODUCT_NAME)}" alt="${p.PRODUCT_NAME}" />
        </div>
        <div class="product-info">
          <h3>${p.CATEGORY || 'Produk'}</h3>
          <p class="product-name">${p.PRODUCT_NAME}</p>
          <p class="product-price">
            ${new Intl.NumberFormat('id-ID', {
              style: 'currency',
              currency: 'IDR',
              minimumFractionDigits: 0
            }).format(p.PRICE)}
          </p>
        </div>
        <div class="product-controls">
          <button class="btn-minus" data-product-id="${p.PRODUCT_ID}"><i data-feather="minus"></i></button>
          <span class="quantity" id="qty-${p.PRODUCT_ID}">${cart[p.PRODUCT_ID] || 0}</span>
          <button class="btn-plus" data-product-id="${p.PRODUCT_ID}"><i data-feather="plus"></i></button>
        </div>
      </div>
    `).join('');

    // Re-replace feather icons
    if (window.feather) window.feather.replace();
  }

  async function loadProducts() {
    try {
      const isProduction = window.location.hostname !== 'localhost' && window.location.hostname !== '127.0.0.1';
      const productsUrl = isProduction ? "/.netlify/functions/products" : "http://127.0.0.1:5000/api/products";
      const cashiersUrl = isProduction ? "/.netlify/functions/cashiers" : "http://127.0.0.1:5000/api/cashiers";
      
      const [pRes, cRes] = await Promise.all([
        fetch(productsUrl),
        fetch(cashiersUrl)
      ]);
      
      const pResult = await pRes.json();
      const cResult = await cRes.json();
      
      const products = pResult.data || [];
      cashiers = cResult.data || [];
      
      products.forEach(p => {
        dbProducts[p.PRODUCT_ID] = {
          id: p.PRODUCT_ID,
          name: p.PRODUCT_NAME,
          price: parseFloat(p.PRICE),
          brand: p.CATEGORY || 'Produk'
        };
      });

      renderProducts(products);
      updateCart();
    } catch (err) {
      console.error("Load error:", err);
      const loadingText = document.getElementById('loading-text');
      if (loadingText) loadingText.textContent = "Gagal memuat produk.";
    }
  }

  function updateCart() {
    const cartItemsDiv = document.getElementById('cart-items');
    if (!cartItemsDiv) return;
    
    cartItemsDiv.innerHTML = '';
    let total = 0;

    Object.entries(cart).forEach(([productId, quantity]) => {
      if (quantity > 0) {
        const product = dbProducts[productId];
        if (!product) return;
        
        const itemTotal = product.price * quantity;
        total += itemTotal;

        const cartItem = document.createElement('div');
        cartItem.className = 'cart-item';
        cartItem.innerHTML = `
          <div class="cart-item-info">
            <p class="cart-item-brand">${product.brand}</p>
            <p class="cart-item-name">${product.name} (${quantity}x)</p>
          </div>
          <div class="cart-item-price">Rp.${itemTotal.toLocaleString('id-ID')}</div>
        `;
        cartItemsDiv.appendChild(cartItem);
      }
    });

    const totalPriceEl = document.getElementById('total-price');
    if (totalPriceEl) totalPriceEl.textContent = 'Rp.' + total.toLocaleString('id-ID');
  }

  function saveAndUpdate() {
    localStorage.setItem('tuko-cart', JSON.stringify(cart));
    Object.keys(dbProducts).forEach(id => {
      const el = document.getElementById(`qty-${id}`);
      if (el) el.textContent = cart[id] || 0;
    });
    updateCart();
  }

  document.addEventListener('DOMContentLoaded', () => {
    const savedCart = localStorage.getItem('tuko-cart');
    if (savedCart) {
      try { cart = JSON.parse(savedCart); } catch (e) { cart = {}; }
    }

    loadProducts();

    document.addEventListener('click', (e) => {
      const target = e.target.closest('button');
      if (!target) return;

      const productId = target.getAttribute('data-product-id');
      if (!productId) return;

      if (target.classList.contains('btn-plus')) {
        cart[productId] = (cart[productId] || 0) + 1;
        saveAndUpdate();
      } else if (target.classList.contains('btn-minus')) {
        cart[productId] = Math.max(0, (cart[productId] || 0) - 1);
        saveAndUpdate();
      }
    });

    const dateInput = document.getElementById('order-date');
    if (dateInput) dateInput.value = new Date().toISOString().split('T')[0];

    const btnKonfirmasi = document.querySelector('.btn-konfirmasi');
    btnKonfirmasi?.addEventListener('click', async () => {
      const selectedMethod = document.getElementById('method').value;
      const orderDate = document.getElementById('order-date').value;
      const items = Object.entries(cart)
        .filter(([_, qty]) => qty > 0)
        .map(([id, qty]) => ({ productId: id, qty, price: dbProducts[id].price }));

      if (items.length === 0) return alert('Keranjang masih kosong');

      const totalValue = items.reduce((acc, item) => acc + (item.price * item.qty), 0);
      const user = JSON.parse(localStorage.getItem('user') || '{}');
      const methodMap = { 'tunai': '1', 'transfer': '2', 'qris': '3' };

      // Pick a random cashier from the loaded list, or fallback to default
      const randomCashierId = cashiers.length > 0 
        ? (cashiers[Math.floor(Math.random() * cashiers.length)].USER_ID || cashiers[Math.floor(Math.random() * cashiers.length)].user_id)
        : '12345678';

      try {
        const response = await fetch(window.location.hostname !== 'localhost' ? '/.netlify/functions/orders' : 'http://localhost:5000/api/orders', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            orderDate,
            custId: user.id || '-NoName-',
            userId: randomCashierId,
            methodId: methodMap[selectedMethod],
            total: totalValue,
            items
          })
        });

        const result = await response.json();
        if (result.success) {
          const receiptModal = document.getElementById('receipt-modal');
          if (receiptModal) {
            document.getElementById('receipt-info').innerHTML = `<div>ID Order</div><div>:#${result.orderId}</div><div>Tanggal</div><div>:${orderDate}</div>`;
            document.getElementById('receipt-details').innerHTML = items.map(it => `<div class="receipt-item"><span>${dbProducts[it.productId].name} (${it.qty}x)</span><span>Rp.${(it.price * it.qty).toLocaleString('id-ID')}</span></div>`).join('');
            document.getElementById('receipt-total').textContent = `Rp.${totalValue.toLocaleString('id-ID')}`;
            receiptModal.style.display = 'flex';
          }
          cart = {};
          localStorage.removeItem('tuko-cart');
          saveAndUpdate();
        }
      } catch (error) { alert('Gagal memproses pesanan'); }
    });

    document.getElementById('btn-close-receipt')?.addEventListener('click', () => window.location.href = '/');
  });
</script>
